{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "gnomad-load",
    "labels": {
      "state": "loading"
    }
  },
  "spec": {
    "restartPolicy": "Never",
    "containers": [
      {
        "name": "gnomad-load",
        "image": "gcr.io/exac-gnomad/gnomadload",
        "env": [
          {
            "name": "DEPLOYMENT_ENV",
            "value": "production"
          },
          {
            "name": "LOAD_DB_PARALLEL_PROCESSES_NUMB",
            "value": "32"
          },
          {
            "name": "EXOMES_SINGLE_VCF",
            "value": "feb-2017-release/gnomad.exomes.sites.autosomes.vcf.bgz"
          },
          {
            "name": "GENOMES_VCF_GLOB",
            "value": "feb-2017-release/*.bgz"
          },
          {
            "name": "EXOMES_SINGLE_VCF_TEST",
            "value": "feb-2017-test/gnomad.exomes.sites.all.vcf.gz"
          },
          {
            "name": "GENOMES_VCF_GLOB_TEST",
            "value": "feb-2017-test/*.bgz"
          }
        ],
        "securityContext": {
          "privileged": true,
          "capabilities": {
            "add": [
              "NET_ADMIN"
            ]
          }
        },
        "imagePullPolicy": "Always"
      }
    ]
  }
}