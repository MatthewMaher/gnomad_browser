{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "gnomad-serve",
    "labels": {
      "state": "serving"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "gnomad-app"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "gnomad-app"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "gnomad-readviz-exons-vol",
            "gcePersistentDisk": {
              "pdName": "gnomad-readviz-exons-gpd",
              "fsType": "ext4",
              "readOnly": true
            }
          }
        ],
        "containers": [
          {
            "name": "gnomad-serve",
            "image": "gcr.io/exac-gnomad/gnomadserve",
            "env": [
              {
                "name": "DEPLOYMENT_ENV",
                "value": "production"
              },
              {
                "name": "EXOMES_SINGLE_VCF",
                "value": "feb-2017-release/gnomad.exomes.sites.autosomes.vcf.bgz"
              },
              {
                "name": "GENOMES_VCF_GLOB",
                "value": "feb-2017-release/*.bgz"
              },
              {
                "name": "EXOMES_SINGLE_VCF_TEST",
                "value": "feb-2017-test/gnomad.exomes.sites.all.vcf.gz"
              },
              {
                "name": "GENOMES_VCF_GLOB_TEST",
                "value": "feb-2017-test/*.bgz"
              }
            ],
            "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
            "volumeMounts": [
              {
                "name": "gnomad-readviz-exons-vol",
                "mountPath": "/var/data/readviz"
              }
            ],
            "securityContext": {
              "privileged": true,
              "capabilities": {
                "add": [
                  "NET_ADMIN"
                ]
              }
            },
            "imagePullPolicy": "Always"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}