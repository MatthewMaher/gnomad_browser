{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "gnomad-copyreadviz",
    "labels": {
      "state": "loading"
    }
  },
  "spec": {
    "restartPolicy": "Never",
    "volumes": [
      {
        "name": "gnomad-readviz-exons-vol",
        "gcePersistentDisk": {
          "pdName": "gnomad-readviz-exons-gpd",
          "fsType": "ext4"
        }
      }
    ],
    "containers": [
      {
        "name": "gnomad-copyreadviz",
        "image": "gcr.io/exac-gnomad/gnomadcopyreadviz",
        "volumeMounts": [
          {
            "name": "gnomad-readviz-exons-vol",
            "mountPath": "/var/data/readviz"
          }
        ],
        "securityContext": {
          "privileged": true,
          "capabilities": {
            "add": [
              "NET_ADMIN"
            ]
          }
        },
        "imagePullPolicy": "Always"
      }
    ]
  }
}